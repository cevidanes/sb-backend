# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=secondbrain
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/secondbrain

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# OpenAI (optional - only used in workers)
OPENAI_API_KEY=

# Environment
ENVIRONMENT=dev

# API
API_PORT=8000

# Firebase Authentication
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_JSON=/path/to/firebase-credentials.json
# OR as JSON string:
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AI Provider Configuration
AI_PROVIDER=openai  # Options: "openai" or "deepseek"
DEEPSEEK_API_KEY=sk-...

# Firebase - Use o arquivo JSON fornecido
FIREBASE_PROJECT_ID=projectsecondbrain
FIREBASE_CREDENTIALS_JSON=./firebase-credentials.json

# Embedding Models (optional - uses defaults if not set)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
DEEPSEEK_EMBEDDING_MODEL=deepseek-embedding
